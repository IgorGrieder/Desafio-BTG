# Application
APP_NAME=btg-core-api
APP_VERSION=1.0.0
APP_ENV=development
LOG_LEVEL=info

# Server
PORT=8080
HOST=localhost

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=btg_orders
DB_SSL_MODE=disable

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_EXCHANGE=orders_exchange
RABBITMQ_QUEUE=orders

# OpenTelemetry (Jaeger)
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
